<UserControl x:Class="BankQueue.Control.QueueStandartControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BankQueue.Control"
             mc:Ignorable="d" >
    
    <Grid Margin="3" Background="Silver">
         <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>  
        
        <TextBlock Text="Kassa" />
        <TextBlock Grid.Column="1" Text="----" />
        <TextBlock Grid.Column="2" Text="{Binding Path=QueueLength, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:QueueStandartControl}}}" />
        <TextBlock Grid.Column="3" Text="stat" />
        <TextBlock Grid.Column="4" Text="Clear" />
    </Grid>
</UserControl>
